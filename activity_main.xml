<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.assign05.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/chapter"
        android:layout_below="@+id/book"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/verse"
        android:layout_below="@+id/chapter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textPersonName"
        android:ems="10"
        android:id="@+id/book"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter Book Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbook"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/book"
        android:layout_alignBottom="@+id/book"
        android:layout_toLeftOf="@+id/chapter"
        android:layout_toStartOf="@+id/chapter" />

    <TextView
        android:text="Enter Chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textChap"
        android:layout_alignBaseline="@+id/chapter"
        android:layout_alignBottom="@+id/chapter"
        android:layout_toLeftOf="@+id/chapter"
        android:layout_toStartOf="@+id/chapter" />

    <TextView
        android:text="Enter Verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVerse"
        android:layout_alignBaseline="@+id/verse"
        android:layout_alignBottom="@+id/verse"
        android:layout_toLeftOf="@+id/verse"
        android:layout_toStartOf="@+id/verse" />

    <Button
        android:text="Share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/share"
        android:onClick="sendMessage"/>
</RelativeLayout>
